            <div class="item">
                <div>Nome</div>
                <div><input type="text" id="name" name="name" placeholder="Seu Nome" value={{member.name}}></div>
            </div>

             <div class="item">
                <div>Email</div>
                <div><input type="email" id="email" name="email" placeholder="Seu email" value={{member.email }}></div>
            </div>

            <div class="item">
                <div>Foto Perfil</div>
                <div><input type="url" name="avatar_url" placeholder="http://" value={{member.avatar_url}}></div>
            </div>


            <div class="item">
                <div>Genero</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>
            </div>
            </div>

        <div class="item">
            <div>Objetivo</div>
                <div>
                    <select name="goals" value="{{member.goals}}">
                        <option value="lost"
