        <div class="item">
            <div>Peso</div>
            <div><input type="number" id="wheight" name="wheight" placeholder="Seu Peso" value={{member.wheight }}></div>
        </div>

        <div class="item">
            <div>Altura</div>
            <div><input type="number" id="height" name="height" placeholder="Altura em cm" value={{member.height}}></div>
        </div>

        <div class="item">
            <div>Instrutor</div>
            <div>
                <select name="instructor">
                    {% for instructor in instructorOptions %}
                    <option value="{{instructor.id}}"
