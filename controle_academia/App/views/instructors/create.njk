{% extends "layout.njk" %}

{% block content %}

    <form class="card" action="/instructors" method="POST">
        <section
            class="avatar" 
            style="background: url('https://source.unsplash.com/collection/4785020/500x500') no-repeat center center/ cover">
        </section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Foto Perfil</div>
                <div><input type="url" name="avatar_url" placeholder="http://"></div>
            </div>

            <div class="item">
                <div>Nome</div>
                <div><input type="text" id="name" name="name" placeholder="Seu Nome"></div>
            </div>

            <div class="item">
                <div>Data nascimento</div>
                <div><input type="date" name="birth"></div>
            </div>

        <div class="item">
            <div>Genero</div>
                <div>
                    <span><input type="radio" name="gender" value="M" checked>Masculino</span>
                    <span><input type="radio" name="gender" value="F">Feminino</span>
                </div>
            
        </div>

        <div class="item">
            <div>Especialidades</div>
            <div>
                <input type="text" name="services" placeholder="Separe os serviÃ§os por virgulas">
            </div>
        </div>

        <button type="submit">Salvar</button>
        </section>
    </form>
    
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
{% endblock %}